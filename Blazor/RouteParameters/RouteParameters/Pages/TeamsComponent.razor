@page "/teams"

<table class="table">
    <thead>
        <tr>
            <th>Team</th>
            <th>Region</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in teams)
        {
            <tr>
                <td><a href=@($"/teams/{team.Id}") class="nav-link">@team.Name</a></td>
                <td>@team.Region</td>
            </tr>   
        }
    </tbody>
    
</table>

@code {

    private List<Team> teams;
    protected override void OnInitialized()
    {
        base.OnInitialized();

        teams = new();
        teams.Add(new Team { Id = 1, Name = "Red", Region = "Region One" });
        teams.Add(new Team { Id = 2, Name = "Blue", Region = "Region Two" });
        teams.Add(new Team { Id = 3, Name = "Yellow", Region = "Region Three" });
    }

    public class Team
    {
        public int Id { get; set; }
        public string Name { get; set; }
        public string Region { get; set; }
    }

}
