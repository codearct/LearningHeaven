@page "/"

<PageTitle>Index</PageTitle>

<RepeaterComponent Items="books">
    <Header>
        <h2>Books</h2>
    </Header>
    <Row Context="book">
        <div><b>@book.Title</b></div>
        <div class="ms-4">Author: @book.Author</div>
        <div class="ms-4">Genre: @book.Genre</div>
        <div class="ms-4">Publish Date: @book.PublishDate</div>
        <div class="ms-4">Page Count: @book.PageCount</div>
    </Row>
</RepeaterComponent>

@code{
    List<Book> books;
    protected override void OnInitialized()
    {
        base.OnInitialized();
        books = new();
        books.AddRange(new Book[3]
        {
            new Book
            {
                Title = "Lean Startup",
                Genre = "Personal Growth",
                Author = "Eric Ries",
                PageCount = 200,
                PublishDate = new DateTime(2001, 06, 12)
            },
            new Book
            {
                Title = "Herland",
                Genre = "Science Fiction",
                Author = "Charlotte Perkins Gilman",
                PageCount = 250,
                PublishDate = new DateTime(2010, 05, 23)
            },
            new Book
            {
                Title = "Dune",
                Genre = "Romance",
                Author = "Frank Herbert",
                PageCount = 540,
                PublishDate = new DateTime(2001, 12, 21)
            }
        });
    }

    public class Book
    {
        public string Title { get; set; }
        public string Genre { get; set; }
        public string Author { get; set; }
        public int PageCount { get; set; }
        public DateTime PublishDate { get; set; }
    }
}